{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "rootDirs": [ "./src" ],
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "typeRoots": [ "./node_modules/@types", "./@types" ]
  },
  "include": [
    "./src/**/*"
  ]
}
